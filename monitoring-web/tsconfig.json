{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@components": ["components"],
      "@controllers": ["controllers"],
      "@common/*": ["common/*"],
      "@common": ["common"],
      "@context/*": ["context/*"],
      "@context": ["context"],
      "@hooks": ["hooks"],
      "@assets/*": ["assets/*"],
      "@assets": ["assets"],
      "@pages": ["pages"],
      "@utils": ["utils"],
      "@layout": ["layout"],
      "@store": ["store"],
      "@store/*": ["store/*"],
      "@models": ["models"],
      "@router/*": ["router/*"],
      "@router": ["router"],
      "@theme": ["theme"],
      "@src/*": ["./*"],
    }
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
